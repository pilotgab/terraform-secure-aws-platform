{
 "type": "monitor",
 "name": "guardduty-high-critical",
 "enabled": true,
 "schedule": {
  "period": {
   "interval": 1,
   "unit": "MINUTES"
  }
 },
 "inputs": [
  {
   "search": {
    "indices": [
     "securitylake-guardduty-*"
    ],
    "query": {
     "bool": {
      "filter": [
       {
        "terms": {
         "severity.label": [
          "HIGH",
          "CRITICAL"
         ]
        }
       }
      ]
     }
    }
   }
  }
 ],
 "triggers": [
  {
   "name": "guardduty-critical",
   "severity": "1",
   "condition": {
    "script": {
     "source": "ctx.results[0].hits.total.value > 0"
    }
   },
   "actions": [
    {
     "name": "notify-sns",
     "destination_id": "dest-sns-critical-9f3a2c7e"
    }
   ]
  }
 ]
}
