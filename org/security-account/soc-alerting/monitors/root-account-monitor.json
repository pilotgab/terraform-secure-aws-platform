{
 "type": "monitor",
 "name": "root-account-activity",
 "enabled": true,
 "schedule": {
  "period": {
   "interval": 1,
   "unit": "MINUTES"
  }
 },
 "inputs": [
  {
   "search": {
    "indices": [
     "securitylake-cloudtrail-*"
    ],
    "query": {
     "bool": {
      "filter": [
       {
        "term": {
         "user.identity.type": "Root"
        }
       }
      ]
     }
    }
   }
  }
 ],
 "triggers": [
  {
   "name": "root-account-usage-detected",
   "severity": "1",
   "condition": {
    "script": {
     "source": "ctx.results[0].hits.total.value > 0"
    }
   },
   "actions": [
    {
     "name": "notify-sns-critical",
     "destination_id": "dest-sns-critical-9f3a2c7e"
    }
   ]
  }
 ]
}
